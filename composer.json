{
    "name": "caseyamcl/sortable-tasks",
    "type": "library",
    "description": "Abstraction to compile and sort tasks on the fly",
    "keywords": [
        "caseyamcl",
        "sortable-tasks"
    ],
    "homepage": "https://github.com/caseyamcl/sortable-tasks",
    "license": "MIT",
    "authors": [
        {
            "name": "Casey McLaughlin",
            "email": "me@caseymclaughlin.com",
            "homepage": "https://caseymclaughlin.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "^7.4|^8.0",
        "marcj/topsort": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit" : "^9.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "SortableTasks\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SortableTasks\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
